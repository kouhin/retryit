{
  "name": "retryit",
  "version": "1.3.0",
  "description": "A Promise version of async/retry",
  "main": "lib/index.js",
  "module": "es/index.js",
  "sideEffects": false,
  "directories": {
    "test": "jest"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build:commonjs": "cross-env NODE_ENV=cjs rollup -c -o lib/retryit.js",
    "build:es": "cross-env BABEL_ENV=es NODE_ENV=es rollup -c -o es/retryit.js",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c -o dist/retryit.js",
    "build:umd:min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c -o dist/retryit.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "lint": "eslint src test",
    "posttest": "npm run lint",
    "prepare": "npm run clean && npm run test && npm run build",
    "test": "jest --coverage",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kouhin/retryit.git"
  },
  "homepage": "https://github.com/kouhin/retryit",
  "keywords": [
    "retry",
    "promise",
    "async"
  ],
  "author": "Bin Hou <houbin217jz@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "cross-env": "^5.1.4",
    "eslint-config-airbnb-deps": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-prettier": "^2.6.0",
    "jest": "^23.0.0-charlie.1",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^4.0.0-beta.4",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  },
  "jest": {
    "testRegex": "(/test/.*\\.spec.js)$"
  },
  "dependencies": {}
}
