  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-preset-env": "^1.3.2",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "coveralls": "^2.13.0",
    "eslint-config-airbnb-deps": "^14.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "jest": "^19.0.2",
    "rimraf": "^2.6.1"
  },
  "jest": {
    "testRegex": "(/test/.*\\.spec.js)$"
